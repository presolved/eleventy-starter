{% from '../_macros/back-button.njk' import backButton %}
{% from '../_macros/nav-list.njk' import navList %}

<!DOCTYPE html>
<html lang="en" class="min-h-screen">
  {% include "head.njk" %}
  <body class="bg-gray-100 tracking-wider min-h-screen">
    {% include "header.njk" %}
    <div class="container w-full flex flex-wrap mx-auto px-2 pt-8 lg:pt-16 mt-16">
      {{ navList(collections.posts, page, title = 'Posts', root='/blog/') }}
      <div class="w-full prose max-w-none lg:w-4/5 p-8 mt-6 lg:mt-0 text-gray-900 leading-normal bg-white border border-gray-400 border-rounded">
        {{ content | safe }}
      </div>

      {{ backButton('Blog Home', '/blog') }}
      
    </div>
    {% include "footer.njk" %}
  </html>
